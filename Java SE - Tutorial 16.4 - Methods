package Tutorials;

public class Test27{

	   public static void main(String[] args) {
	      int a = 11;// a yı declare et değeri 11 olarak ata
	      int b = 6;// b yi declare et değeri 6 olarak ata
	      double c = 7.3; // c yi declare et değeri 7.3 olarak ata
	      double d = 9.4; // d yi declare et değeri 9.4 olarak ata
	      int result1 = minFunction(a, b);//result1 integer bir değer olsun ve sonucu minFunction(a,b) nin döndürdüğü değer olarak atansın
	      
	      // aynı fonksiyonu farklı parametrelerle tekrar tanımla
	      double result2 = minFunction(c, d);//c ve d parametleriyle.. ve double cinsinden
	      System.out.println("Minimum Value = " + result1);//min değer(int)
	      System.out.println("Minimum Value = " + result2);//min değer(double)
	   }

	   // integer için
	   public static int minFunction(int n1, int n2) {
	      int min;//min declare et
	      if (n1 > n2)// n1 n2 den büyükse
	         min = n2;// küçük olan n2
	      else//değilse
	         min = n1;//küçük olan n1

	      return min; //küçüğü döndür
	   }
	   
	   //double için
	   public static double minFunction(double n1, double n2) {
	     double min;//double min declare et
	      if (n1 > n2)//n1 n2 den büyükse
	         min = n2;//min olan n2
	      else//değilse
	         min = n1;//n1

	      return min; //döndür
	   }
	}
